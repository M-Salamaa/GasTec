                <aside class="sidebar">
                    <div id="sidenavelist"></div>
                    <div class="sidebar-widget sidebar-blog-category">
                        <ul class="blog-cat">
                            @foreach (var mainSection in Model.HR)
                            {
                                @foreach (var entity in mainSection.LstChildClassification)
                                {
                                    @if (entity.IsActive == true)
                                    {

                                        <li class="active"><a href="@Url.Action(GetActionName.GetActionNameforHRSectionByID(entity.ClassificationID), "About")">@entity.ClassificationName</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action(GetActionName.GetActionNameforHRSectionByID(entity.ClassificationID), "About")">@entity.ClassificationName</a></li>

                                    }

                                }
                            }
                        </ul>
                    </div>
                </aside>
            </div>
            <!--Content Side-->
            <div class="content-side pull-left col-lg-9 col-md-8 col-sm-12 col-xs-12">
                <div class="services-single" dir="rtl">
                    <div class="inner-box">
                        <div id="cmspage1">
                            @foreach (var entity in Model.AboutUsSection)
                            {
                                <h2>@entity.ClassificationName</h2>
                                <div style="font-size:14px; position:relative">
