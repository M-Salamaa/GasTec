@model HomePageViewModel
@using WebApp_gastec.Domain

@{
    ViewData["Title"] = "GASTEC";
    Layout = "_Layout";
}


<!-- Page Title-->
<section class="page-title" style="background-image:url('../../wwwroot/public/assets/softextwo/images/background/Stations.jpg');">
    <div class="auto-container">
        @foreach (var entity in Model.Stations_Categories)
        {
            <!-- <h1>@entity.ClassificationName  </h1>-->
        }
    </div>
</section>
<!-- End Page Title-->
<!-- Page Info-->
<div class="page-info">
    <div class="auto-container">
        <div class="inner-container clearfix">
            <ul class="bread-crumb pull-right">
                <li><a href="@Url.Action("Index","Home")">الرئيسية</a></li>
                @foreach (var entity in Model.Stations_Categories)
                {
                    <li>@entity.ClassificationName</li>
                }
            </ul>
        </div>
    </div>
</div>
<!-- End Page Info-->
<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">
            <!--Sidebar Side-->
            <div class="sidebar-side col-lg-3 col-md-4 col-sm-12 col-xs-12 pull-right">
                <aside class="sidebar">
                    <!--Blog Category Widget-->
                    <div id="sidenavelist">
                        <div class="sidebar-widget sidebar-blog-category">
                            <ul class="blog-cat">
                                @foreach (var mainSection in Model.Stations_Main)
                                {
                                    @foreach (var entity in mainSection.LstChildClassification)
                                    {
                                        @if (entity.IsActive == true)
                                        {
                                            <li class="active">
                                                <a href="@Url.Action(GetActionName.GetActionNameforCateringStationsSectionByID(entity.ClassificationID), "Catering_Stations")">@entity.ClassificationName</a>
                                            </li>
                                        }
                                        else
                                        {

                                            <li>
                                                <a href="@Url.Action(GetActionName.GetActionNameforCateringStationsSectionByID(entity.ClassificationID), "Catering_Stations")">@entity.ClassificationName</a>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
            <!--Content Side-->
            <div class="content-side pull-left col-lg-9 col-md-8 col-sm-12 col-xs-12">
                <div class="services-single" dir="rtl">
                    <div class="inner-box">
                        <div id="cmspage1">
                            <div style="font-size:14px; position:relative">
                                <h3 dir="rtl" style="text-align: justify;">
                                    <span style="color:#263a69;">
                                        <span style="font-size:18px;">- محطات تموين نموذجية متكاملة الخدمات بالوقود السائل والغاز الطبيعي والشحن الكهربائي</span>
                                    </span>
                                </h3>
                                @foreach (var Lstchild in Model.Stations_Categories)
                                {
                                    <table border="1" cellpadding="1" cellspacing="1" dir="rtl" style="width:100%;">
                                        <tbody>
                                            <tr>
                                                @foreach (var child in Lstchild.LstChildClassification)
                                                {
                                                    <td>
                                                        <a href="@Url.Action("Stations","Catering_Stations",new { Id_ = child.ClassificationID.ToString()})">
                                                            @child.ClassificationName
                                                        </a>
                                                    </td>
                                                }
                                            </tr>
                                        </tbody>
                                    </table>
                                    <p dir="rtl" style="text-align: justify;">&nbsp;</p>
                                    <p dir="rtl" style="text-align: justify;">
                                        <span style="color:#263a69;">
                                            <span style="font-size:18px;">
                                                @Html.Raw(Lstchild.Body)
                                            </span>
                                        </span>
                                    </p>
                                    <p dir="rtl" style="text-align: justify;">&nbsp;</p>
                                    <h3 dir="rtl" style="text-align: justify;">
                                        <span style="color:#263a69;">
                                            @foreach (var image in Lstchild.LstImages)
                                            {
                                                <img src="~/Images/Integrated_Stations/@image.ImageGUID" style="height: 315px; width: 900px;">
                                            }
                                        </span>
                                    </h3>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="team-column col-md-12 col-sm-12 col-xs-12" style="margin-top: 30px">
                    <div class="inner-column">
                        <div class="row clearfix">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
